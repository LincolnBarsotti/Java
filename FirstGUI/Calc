public class Calc {
    
    public Calc(){
        Object[] lista = {"Soma","Subtração","Multiplicação","Divisão"};
            
        String escolha = String.valueOf(JOptionPane.showOptionDialog( null, "Escolha o desejado", "Titulo", JOptionPane.YES_NO_CANCEL_OPTION, JOptionPane.INFORMATION_MESSAGE, null, lista, null));
        
        double num1 = Double.parseDouble(JOptionPane.showInputDialog(null, "Escolha o primeiro número"));
        
        double num2 = Double.parseDouble(JOptionPane.showInputDialog(null, "Escolha o segundo número"));
        
        if(escolha.equals("0")){setSoma(num1,num2);}
        else if(escolha.equals("1")){setSub(num1,num2);}
        else if(escolha.equals("2")){setMult(num1,num2);}
        else{setDiv(num1,num2);}

    }
    
    private void setSoma(double num1,double num2){
        JOptionPane.showMessageDialog(null,(num1 + num2));
    }
    
    private void setSub(double num1,double num2){
        JOptionPane.showMessageDialog(null,(num1 - num2));
    }

    private void setMult(double num1,double num2){
        JOptionPane.showMessageDialog(null,(num1 * num2));
    }

    private void setDiv(double num1,double num2){
        JOptionPane.showMessageDialog(null,(num1 / num2));
    }
}
